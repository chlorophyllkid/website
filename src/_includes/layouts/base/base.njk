<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="canonical" href="https://christophervoigt.dev{{ page.url | url }}" />
    <script type="module" src="{{ '/js/theme-switch.js' | url }}"></script>
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="preload" href="{{ '/fonts/ubuntu-v20-latin-regular.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/fonts/ubuntu-v20-latin-700.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script>
      const theme = localStorage.getItem('theme');
      if (theme) {
        document.documentElement.setAttribute('data-theme', theme)
      }
    </script>
  </head>
  <body>
    <header class="layout-grid">
      <div class="layout-inner flex-container">
        <a class="logo" href="{{ '/' | url }}">
        <span class="icon"></span>
        <span class="title">{{ metadata.title }}</span>
      </a>

      <theme-switch class=""></theme-switch>
      </div>

    </header>

    <main class="layout-grid">
      {{ content | safe }}
    </main>

    <footer class="layout-grid">
      <p>Â© 2023 Christopher Voigt.</p>
    </footer>
  </body>
</html>